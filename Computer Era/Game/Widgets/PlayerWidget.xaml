<UserControl x:Class="Computer_Era.Game.Widgets.PlayerWidget"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Computer_Era.Game.Widgets"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Background="#E5747474" Margin="10">
        <StackPanel Margin="10">
            <Label Name="PlayerName" Content="Имя игрока" Foreground="White" FontSize="14" Visibility="Collapsed" ></Label>
            <Label Name="PlayerJob" Content="Работа: " Foreground="White" FontSize="14"></Label>
        </StackPanel>
        <Grid.ContextMenu>
            <ContextMenu>
                <CheckBox Name="IsEnabledPlayerName" Content="Имя игрока" Checked="IsEnabledPlayerName_Checked" Unchecked="IsEnabledPlayerName_Unchecked" />
                <CheckBox Name="IsEnabledPlayerJob" Content="Работа" IsChecked="True" Checked="IsEnabledPlayerJob_Checked" Unchecked="IsEnabledPlayerJob_Unchecked" />
            </ContextMenu>
        </Grid.ContextMenu>
    </Grid>
</UserControl>
