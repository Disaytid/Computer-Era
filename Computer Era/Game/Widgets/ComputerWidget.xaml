<UserControl x:Class="Computer_Era.Game.Widgets.ComputerWidget"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Computer_Era.Game.Widgets"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#CC747474" Margin="10">
        <StackPanel Name="NoComputer" Margin="10">
            <Label Content="У вас нет компьютера!" Foreground="White" FontSize="14"/>
        </StackPanel>
        <StackPanel Name="Computer" Margin="10" Visibility="Collapsed">
            <Label Content="Ваш компьютер" Foreground="White" FontSize="16"/>
            <Label Name="ComputerName" Content="Имя компьютера: " Foreground="White" FontSize="14"/>
            <Label Name="Case" Content="Корпус: " Foreground="White" FontSize="14"/>
            <Label Name="Motherboard" Content="Материнская плата: " Foreground="White" FontSize="14"/>
            <Label Name="PSU" Content="Блок питания: " Foreground="White" FontSize="14"/>
            <Label Name="CPU" Content="Процессор: " Foreground="White" FontSize="14"/>
        </StackPanel>
    </Grid>
</UserControl>
