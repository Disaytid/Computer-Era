<UserControl x:Class="Computer_Era.Game.Programs.MCInstallSoft"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Computer_Era.Game.Programs"
             xmlns:res="clr-namespace:Computer_Era.Properties"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">
        <ListBox>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <DockPanel FlowDirection="RightToLeft">
                        <Button Content="{x:Static res:Resources.Install}" FlowDirection="LeftToRight"/>
                        <Label FlowDirection="LeftToRight"/>
                    </DockPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>
